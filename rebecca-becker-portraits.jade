head
  meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
  title Portraits by Rebecca Becker
body

template(name='home')
  +nav
  .user-content
    +content

template(name='nav')
  .nav-button
    i.fa.fa-bars
  .side-nav-wrapper
    ul.side-nav
      li
        a(href='#gallery') Gallery
      li
        a(href='#about') About
      li
        a(href='#pricing') Pricing
      li
        a(href='#testimonials') Testimonials
      li
        a(href='#contact') Contact


template(name='content')
  .text-center
    +header
  +gallery
  .row#about
    .col.col-sm-6.bio-img-wrapper
      .bio-img
    .col.col-sm-6
      +about_the_artist
  .row
    .col.col-md-12#pricing
      h1.text-center Pricing
      hr
  .row
    .col.col-sm-6
      +oil_prices
    .col.col-sm-6
      +pastel_prices
  .row#testimonials
    .col.col-md-12
      h1.text-center Testimonials
      hr
  .row
    .col-md-12
      +testimonials
  .row#contact
    .col.col-md-12
      h1.text-center Contact
      hr
  .row
    .col.col-md-12
      h2.text-center Rebecca Becker, Atlanta Portrait Artist
  .row
    .col.col-md-12
      h2.text-center Telephone:
        a(href='tel:404-367-1006') (404) 367-1006
  .row
    .col.col-md-12
      h2.text-center Email:
        a(href='mailto:info@portraitsbyrebeccabecker.com') info@portraitsbyrebeccabecker.com
  .row
    .col.col-md-12
      hr.dashed
  .row
    .col.col-md-12.text-center
      .small Copyright 2009-2011 Â© Portraits by Rebecca Becker. All Rights Reserved.
      br


template(name='oil_prices')
  h3.text-center Oil Prices
  each prices
    ul.price
      li
        span.product #{product}
        span.price #{price}

template(name='pastel_prices')
  h3.text-center Pastel Prices
  each prices
    ul.price
      li
        span.product #{product}
        span.price #{price}

template(name='header')
  .header
    .clean PORTRAITS BY
    .cursive Rebecca Becker


template(name='about_the_artist')
  .about-the-artist
  h1.text-center About the Artist
  hr
  .big-read
    {{ dict 'site.about_the_artist' 'No description' }}

template(name='testimonials')
  .testimonials
    each testimonials
      .testimonial-wrapper
        .testimonial
          .quote #{quote}
          .author #{author}

template(name='gallery')
  .gallery#gallery
    .row
      .col-md-12
        ul.gallery-nav
          each categories_first
            li.selected
              span.category(data-category=this) #{this}
          each categories_rest
            li
              span.category(data-category=this) #{this}
    .portraits-wrapper
      .row
        .col-md-12.portraits#top
          each portraits_top
            .portrait
              a.fancybox(href=image.url rel="gallery")
                img(src=image.url)
      .row
        .col-md-12.portraits#bottom
          each portraits_bottom
            .portrait
              a.fancybox(href=image.url rel="gallery")
                img(src=image.url)

template(name='portraits')
  each portraits
    .portrait
      a.fancybox(href=image.url rel="gallery")
        img(src=image.url)
